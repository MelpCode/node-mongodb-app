<h2 class="display-4">Edit Book</h2>
<div class="row my-4">
    <div class="col-md-4 offset-md-4">
        <div class="card shadow">
            <div class="card-body">
                <form action="/books/edit/{{book._id}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                    <input 
                        type="text"
                        name="title"
                        value="{{book.title}}"
                        placeholder="Enter title"
                        class="form-control">
                    </div>
                    <div class="form-group">
                        <input 
                            type="text"
                            name="author"
                            value="{{book.author}}"
                            placeholder="Enter author"
                            class="form-control">
                    </div>
                    <div class="form-group">
                        <input 
                            type="text"
                            name="genre"
                            value="{{book.genre}}"
                            placeholder="Enter genre"
                            class="form-control">
                    </div>
                    <div class="form-group">
                        <input 
                            type="text"
                            name="imagebook"
                            value="{{book.imagebook}}"
                            placeholder="Enter image"
                            class="form-control">
                    </div>
                    <button 
                        type="submit"
                        class="btn btn-primary btn-block">
                        Save Book
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>